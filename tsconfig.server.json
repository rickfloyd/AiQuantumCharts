{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist-server",
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": false,
    "jsx": "preserve"
  },
  "include": [
    "src/server/**/*",
    "src/database/**/*",
    "src/services/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "dist-server",
    "src/components/**/*",
    "src/hooks/**/*",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}